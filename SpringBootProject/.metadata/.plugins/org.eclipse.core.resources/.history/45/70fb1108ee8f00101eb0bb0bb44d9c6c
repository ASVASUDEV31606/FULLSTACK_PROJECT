package com.klef.labexam.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.klef.labexam.model.Product;
import com.klef.labexam.repository.ProductRepository;

@Service
public class ProductServiceImpl implements ProductService
{
	@Autowired
	private ProductRepository repository;
	
	public String addProduct(Product p) 
	{
		repository.save(p);
		return "Product Added Successfully";
	}
	
	public List<Product> viewallproduct() 
	{
		return repository.findAll();
	}
	
	public String deleteproduct(int pid) 
	{
		Optional<Product> object = repository.findById(pid);
		
		String msg = null;
		
		if(object.isPresent())
		{
			Product p = object.get();
			repository.delete(p);
			msg = "Product Delete Successfully";
		} else {
			msg = "Product ID is not found in the list";
		}
		return msg;
	}
	
	@Override
	public String updateProduct(Product product) {
	    Optional<Product> object = productRepository.findById(product.getId());
	    String msg;

	    if (object.isPresent()) {
	        Product p = object.get();

	        p.setName(product.getName());
	        p.setCost(product.getCost());
	        p.setCompany(product.getCompany());
	        p.setContact(product.getContact());

	        productRepository.save(p);   // âœ… save the updated object, not the request directly

	        msg = "Product Updated Successfully";
	    } else {
	        msg = "Product ID Not Found to Update";
	    }
	    return msg;
	}


}
